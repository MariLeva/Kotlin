<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemHistoryRV"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvHistoryItemCity"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_15_dp"
            android:layout_marginTop="@dimen/margin_15_dp"
            android:gravity="center"
            android:text="History" />

        <TextView
            android:id="@+id/tvHistoryItemTemperature"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_15_dp"
            android:layout_marginTop="@dimen/margin_15_dp"
            android:gravity="center"
            android:text="10" />

        <TextView
            android:id="@+id/tvHistoryItemFeelsLike"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_15_dp"
            android:layout_marginTop="@dimen/margin_15_dp"
            android:gravity="center"
            android:text="10" />

        <TextView
            android:id="@+id/tvHistoryItemFeelsCondition"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_15_dp"
            android:layout_marginTop="@dimen/margin_15_dp"
            android:gravity="center"
            android:text="history" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgHistoryItemIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="@dimen/margin_15_dp"
            android:layout_marginTop="@dimen/margin_15_dp"
            android:gravity="center"
            android:scaleType="fitXY" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/hairline"
        android:layout_marginTop="@dimen/margin_15_dp"
        android:background="@color/blue_500" />

</LinearLayout>